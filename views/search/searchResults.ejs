<%- include('../components/header') %>
    <main>

        <section class="worldwide-stats">
            <div class="section-title">
                <h2>Search Results for: <span>
                    <%= countryName %>
                </span>
                </h2>
            </div>
            <div class="white-stats-cards">
                <% if(searchResults.length===0){ %>
                    <h4>No Results Found</h4>
                    <%}else{ %>
                        <% searchResults.map(results=>{ %>
                            <div class="white-stats-card">
                                <div class="white-stats-card-title">
                                    <h3>Date: <%= results.Date %>
                                    </h3>
                                </div>
                                <div class="white-stats-card-text">
                                    <h4>Number of confirmed cases: <%= results.Cases %>
                                    </h4>
                                </div>
                            </div>
                            <% });} %>
            </div>
        </section>
    </main>
    <%- include('../components/footer') %>