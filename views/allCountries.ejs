<%- include('components/header') %>
    <main>

        <section class="countries-stats">
            <div class="section-title">
                <h2>All Countries Stats</h2>
            </div>
            <div class="white-stats-cards">
                <% if(countries==='undefined' ){ %>
                    <h4>No Results Found</h4>
                    <%}else{ %>
                        <% countries.map(country=>{ %>
                            <div class="white-stats-card">
                                <div class="white-stats-card-title">

                                    <h3>Country: <%= country.name %>, <%= country.countryCode %>
                                    </h3>
                                </div>
                                <div class="white-stats-card-text">

                                    <h4>Total Confirmed Cases: <%= country.confirmed %>
                                    </h4>
                                    <h4>Total Death Cases: <%= country.deaths %>
                                    </h4>
                                    <h4>Total Recovered Cases: <%= country.recovered %>
                                    </h4>
                                    <h4>Date: <%= country.date %>
                                    </h4>
                                </div>
                                <div class="white-stats-card-btn">
                                    <form action="/addToRecords" method="POST">
                                        <input type="hidden" name="country" value="<%= country.name %>">
                                        <input type="hidden" name="countryCode" value="<%= country.countryCode %>">
                                        <input type="hidden" name="confirmedCases" value="<%= country.confirmed %>">
                                        <input type="hidden" name="deathCases" value="<%= country.deaths %>">
                                        <input type="hidden" name="recoveredCases" value="<%= country.recovered %>">
                                        <input type="hidden" name="date" value="<%= country.date %>">
                                        <button class="btn" type="submit">Add to my Records</button>
                                    </form>
                                </div>
                            </div>

                            <% });} %>
            </div>
        </section>
    </main>

    <%- include('components/footer') %>